[advice]
	addEmptyPathspec = false
[alias]
	add-no-whitespace = !"f() { git diff-no-whitespace -U0 --no-color \"$@\" | git apply --cached --ignore-whitespace --unidiff-zero -; }; f"
	asm = !git-assembler
	bash = !bash
	br = branch
	cane = commit --amend --no-edit
	canpf = !git commit --amend --no-edit && git push --force-with-lease
	ch-pk = cherry-pick
	ckt = checkout
	diff-words = diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
	diff-no-whitespace = diff --ignore-space-at-eol -b -w --ignore-blank-lines
	graph = !"f () { tips=\"${@:-$(git ls-branches)}\"; merge_base=\"$(git merge-base --octopus $tips)\"; git pl --ancestry-path \"^$merge_base~\" $tips; }; f"
	ls = status
	ls-branches = branch --format '%(refname:short)'
	pl = prettylog
	prettylog = log --graph --decorate --format=format:'%C(dim white)---%C(reset) %C(bold blue)%h%C(reset) %C(dim white)-%C(reset)%C(auto)%d%C(reset)\n%C(white)%s%C(reset) %C(dim white)%an%C(reset) %C(dim green)(%ar)%C(reset)'
	push-fwl = push --force-with-lease
	pushup = !git up && git push
	re = restore
	show-root = rev-parse --show-toplevel
	sh = !sh
	stack = graph main HEAD
	sw = switch
	up = !git pull --rebase --prune --tags "$@" && git submodule update --init --recursive
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[commit]
	sign = true
[core]
	autocrlf = input
	editor = nvim
	longpaths = true
	fscache = true
	pager = less -x1,5
[color]
	ui = true
[credential]
	helper = store
[diff]
	colorMoved = dimmed_zebra
	tool = kdiff3
[difftool]
	prompt = false
[delta]
	features = decorations
	line-numbers = true
	syntax-theme = Monokai Extended
	whitespace-error-style = 22 reverse
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only --features=interactive
[log]
	decorate = full
[merge]
	conflictstyle = diff3
	ff = only
	tool = p4merge
[mergetool]
	keepBackup = false
[mergetool "p4merge"]
	cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[pull]
	ff = only
	rebase = true
[push]
	default = simple
	autoSetupRemote = true
[rebase]
	autoSquash = true
	autoStash = true
	missingCommitsCheck = error
	rescheduleFailedExec = true
	stat = true
	updateRefs = true
[stash]
	showPatch = true
[svn]
	pushmergeinfo = true
[user]
	email = erichdongubler@gmail.com
	name = Erich Gubler
