[advice]
	addEmptyPathspec = false
[alias]
	add-no-whitespace = !"f() { git diff-no-whitespace -U0 --no-color \"$@\" | git apply --cached --ignore-whitespace --unidiff-zero -; }; f"
	asm = !git-assembler
	bash = !bash
	br = branch
	cane = commit --amend --no-edit
	canpf = !git commit --amend --no-edit && git push --force-with-lease
	ch-pk = cherry-pick
	ckt = checkout
	diff-words = diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
	diff-no-whitespace = diff --ignore-space-at-eol -b -w --ignore-blank-lines
	gl = !git-glimpse
	ls = status
	ls-branches = branch --list --format '%(refname:short)'
	ne = !GIT_EDITOR=true git
	nse = !GIT_SEQUENCE_EDITOR=true git
	pl = prettylog
	prettylog = log --graph --decorate --format=erichdongubler
	push-fwl = push --force-with-lease
	pushup = !git up && git push
	re = restore
	show-root = rev-parse --show-toplevel
	sh = !sh
	stack = glimpse stack
	sw = switch
	tree = glimpse locals
	up = !git pull --rebase --prune --tags "$@" && git submodule update --init --recursive
[branch]
	sort = -committerdate
[cinnabar]
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[commit]
	gpgsign = true
	verbose = true
[core]
	autocrlf = input
	editor = nvim
	longpaths = true
	fscache = true
	pager = less -x1,5
[color]
	ui = true
[credential]
	helper = store
[diff]
	colorMoved = dimmed_zebra
	external = difft
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[delta]
	features = decorations
	line-numbers = true
	syntax-theme = Monokai Extended
	whitespace-error-style = 22 reverse
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[fetch]
	pruneTags = true
[glimpse]
	pretty = erichdongubler
[gpg]
	format = ssh
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only --features=interactive
[log]
	abbrevCommit = true
	date = "format:%Y-%m-%dT%H:%M:%S%z (%A)"
	decorate = full
[merge]
	conflictstyle = zdiff3
	tool = p4merge
[mergetool]
	keepBackup = false
[mergetool "p4merge"]
	cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
[pager]
	diff = delta
	difftool = true
	log = delta
	reflog = delta
	show = delta
[pretty]
	erichdongubler = format:%C(dim white)---%C(reset) %C(bold blue)%h%C(reset) %C(dim white)-%C(reset) %C(auto)%D%C(reset)\n%C(white)%s%C(reset) %C(dim white)%an%C(reset) %C(dim green)(%ar)%C(reset)
[pull]
	ff = only
	rebase = true
[push]
	autoSetupRemote = true
	default = simple
	followTags = true
[rebase]
	autoSquash = true
	autoStash = true
	missingCommitsCheck = error
	rescheduleFailedExec = true
	stat = true
	updateRefs = true
[rerere]
	enabled = true
[stash]
	showPatch = true
[svn]
	pushmergeinfo = true
[tag]
	sort = -creatordate
[user]
	email = erichdongubler@gmail.com
	name = Erich Gubler
	signingkey = "~/.ssh/id_ed25519.pub"
